<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ecg.ecg_collect.CollectLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/collect_login_image"
            android:src="@drawable/photo"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/collect_login_notice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="姓名："
        android:gravity="center"
        android:textColor="#4f4b54"
        android:textStyle="bold|italic"
        android:background="#63bedfc9"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/collect_login_return"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:text="返回上一部"
            android:gravity="center"
            android:textColor="#222123"
            android:textStyle="bold|italic"
            android:background="#b1285035"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/collect_login_next"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="签到"
            android:gravity="center"
            android:textColor="#3a2158"
            android:textStyle="bold|italic"
            android:background="#63081e0f"
            android:textSize="28sp"/>
    </LinearLayout>

</LinearLayout>
