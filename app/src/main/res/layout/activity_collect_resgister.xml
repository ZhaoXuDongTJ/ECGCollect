<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ecg.ecg_collect.CollectResgisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/collect_register_image"
            android:src="@drawable/photo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/collect_register_notice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="已经收集:"
        android:gravity="center"
        android:textColor="#4f4b54"
        android:textStyle="bold|italic"
        android:background="#63bedfc9"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="输入姓名："
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/collect_register_name"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/collect_register_return"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:text="返回"
            android:gravity="center"
            android:textColor="#222123"
            android:textStyle="bold|italic"
            android:background="#b1285035"
            android:textSize="28sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/collect_register_next"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="下一步"
            android:gravity="center"
            android:textColor="#3a2158"
            android:textStyle="bold|italic"
            android:background="#63081e0f"
            android:textSize="28sp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
